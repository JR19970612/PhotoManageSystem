<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ydb.dao.IPhotoDao">
    <resultMap id="photoMap" type="Photo">
        <id property="id" column="photo_id"></id>
        <result property="name" column="photo_name"></result>
        <result property="desc" column="photo_desc"></result>
        <result property="createTime" column="photo_createtime"></result>
        <result property="albumId" column="album_id"></result>
        <result property="photoOriginalUrl" column="photo_url"></result>
        <result property="photoThumUrl" column="photo_thum"></result>
    </resultMap>

    <insert id="insertPhoto" parameterType="Photo">
        INSERT INTO
        Photo(photo_name,photo_desc,photo_createtime,album_id,photo_url,photo_thum)
        VALUES (#{name},#{desc},#{createTime},#{albumId},#{photoOriginalUrl},#{photoThumUrl)
        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select @@identity
        </selectKey>
    </insert>


    <delete id="deletePhoto" parameterType="Photo">
        delete from photo
        <where>
            photo_id=#{id}
        </where>
    </delete>

    <update id="updatePhoto" parameterType="Photo">
        UPDATE photo SET
        photo_name =#{name},
        photo_desc=#{desc},
        album_id=#{albumId}
        <where>
            photo_id=#{id}
        </where>
    </update>

    <select id="selectPhotoByName" resultMap="photoMap">
        select * from photo
        <where>
            photo_name=#{name}
        </where>
    </select>


    <select id="selectPhotoById" resultMap="photoMap">
        select * from photo
        <where>
            photo_id=#{id}
        </where>
    </select>
</mapper> 